from GUI import GUI
from HAL import HAL

# Constantes
VICTIMS_X = 30
VICTIMS_Y = -40
BOAT_X = 0
BOAT_Y = 0

# Variables
x_vel = 0.25
angle = 0.6
iterations = 0
spiral_iterations = 300
landing_margin = 0.07

# Inicio
x_pos = HAL.get_position()[0]
y_pos = HAL.get_position()[1]

# Despegue
HAL.takeoff(3)

# Bucle principal
while not((VICTIMS_X - 1 <= x_pos <= VICTIMS_X + 1) and
          (VICTIMS_Y - 1 <= y_pos <= VICTIMS_Y + 1)):

    # Muestra las im치genes frontal y ventral
    GUI.showImage(HAL.get_frontal_image())
    GUI.showLeftImage(HAL.get_ventral_image())

    # Actualiza la posici칩n del barco
    x_pos = HAL.get_position()[0]
    y_pos = HAL.get_position()[1]

    # Setea la posici칩n del comando
    HAL.set_cmd_pos(VICTIMS_X, VICTIMS_Y, 3, angle)
    # time.sleep(0.01)

# Bucle iterativo
while True:

    # Muestra las im치genes frontal y ventral
    GUI.showImage(HAL.get_frontal_image())
    GUI.showLeftImage(HAL.get_ventral_image())
